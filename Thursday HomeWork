x = float(input("Enter value for x: "))

# My code
y = 1/(x + (1/(x + (1/(x + (1/x))))))
print("y =", y)

#####################################################################################################
hour = int(input("Starting time (hours): "))
mins = int(input("Starting time (minutes): "))
dura = int(input("Event duration (minutes): "))

minutes= (mins+dura) %60 #total minutes from start to finish
hours=int(hour+ (mins+dura)/60)% 24 # total hours taken 

print("\nThe event will end at", hours, ":", minutes, end="\n")

